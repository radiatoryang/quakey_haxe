<hbox id="menuBar">
    <spacer width="8" />
    <image resource="images/icon_quakey.png" width="32" height="32" opacity="0.69" />
    <spacer width="8" />
    <label id="menuBarStatus" text="Welcome to QUAKEY" />
    <spacer width="100%" />
    <button id="homeButton" icon="images/icon_home.png" tooltip="Main view" />
    <button id="searchButton" icon="images/icon_search.png" tooltip="Search maps" />
    <button id="notifyButton" icon="images/icon_bell.png" tooltip="Notification log" />
    <button id="configButton" icon="images/icon_gear.png" tooltip="Configure Quake paths" />
    <vbox id="notifyContainer" width="38%" style="max-height: 100%" includeInLayout="false" >
        <listview width="100%" id="notifyList" style="max-height: 100%" selectedIndex="1">
            <item-renderer styleName="default-background" layoutName="horizontal" width="100%" height="65px">
                <button id="notifyZoom" width="100%" height="63px" tooltip="click to view">
                    <image id="notifyImage" width="96px" height="64px" />
                    <label id="notifyText" styleName="mediumText" width="100%" height="48px" paddingLeft="100" textAlign="left" />
                    <label id="notifyTime" styleName="smallText" width="100%" height="100%" paddingTop="40" paddingLeft="100" opacity="0.25" />
                </button>
                <button id="notifyDismiss" width="64px" height="63px" text="X" tooltip="click to dismiss" />
            </item-renderer>
        </listview>
    </vbox>
</hbox>