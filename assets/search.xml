<vbox styleName="default-background" width="100%" height="100%">
    <style source="styles/quakey.css" />
    <textfield id="searchBar" width="100%" height="32" />
    <hbox width="100%" height="100%">
        <vbox width="320" height="100%">
            <vbox id="searchFilters" width="100%" height="320">
                <label id="yearLabel" text="Year: 1996-2021" />
                <slider id="yearSlider" min="1996" max="2021" start="1996" end="2021" step="1" majorTicks="10" />

                <label id="sizeLabel" text="Size: 0-500mb" />
                <slider id="sizeSlider" min="0" max="500" start="0" end="500" step="25" majorTicks="25" />

                <label id="ratingLabel" text="Rating: 0-100%" />
                <slider id="ratingSlider" start="25" end="75" step="5" minorTicks="5" majorTicks="20" />

                <label id="authorCountLabel" text="Authors 0-15+" />
                <slider id="authorCountSlider" min="0" max="15" start="0" end="15" step="1" minorTicks="1" majorTicks="5" />
            </vbox>
            <listview id="searchSuggestions" width="100%" height="100%">

            </listview>
        </vbox>
        <scrollview id="searchResults" width="100%" height="100%" contentWidth="100%">

        </scrollview>
    </hbox>
</vbox>