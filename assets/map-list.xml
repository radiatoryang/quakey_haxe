<vbox width="100%" height="320">
    <hbox width="100%">
        <label styleName="header" text="Map List Name" id="listName" verticalAlign="bottom" />
        <spacer width="8" />
        <label text="Map List Description" id="listDescription" verticalAlign="bottom" paddingBottom="6" />
    </hbox>
    <absolute width="100%" height="260">
        <scrollview id="mapScroll" styleName="mapList" width="100%" height="260" contentHeight="100%">
            <grid columns="1">
                <hbox id="listContents" style="spacing:16px;">

                </hbox>    
            </grid>
        </scrollview>
        <hbox width="100%" height="50%" top="65">
            <button height="100%" id="buttonPrevious" text="<" />
            <spacer height="100%" width="100%" />
            <button height="100%" id="buttonNext" text=">" />
        </hbox>
    </absolute>
</vbox>