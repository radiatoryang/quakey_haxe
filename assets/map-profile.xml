<vbox styleName="default-background" width="100%" height="100%">
    <vbox id="background-preview" width="100%" height="100%">
        <vbox id="background" width="100%" height="100%" padding="64">
            <button text="<< Back" id="backButton" />
            <spacer height="16" />

            <label styleName="header-big" text="Map Title" id="title" />
            <hbox id="authors" width="50%">
                <label text=" by " />
            </hbox>
            <spacer height="16" />
            <label text="Map Date" id="date" />
            <spacer height="16" />
            <scrollview width="50%" height="100%" contentWidth="100%" style="border:none;" >
                <label styleName="description" text="Description" id="description" width="100%" />
            </scrollview>
        </vbox>
    </vbox>
</vbox>