<vbox styleName="mapProfile" width="100%" height="100%">
    <vbox id="background-preview" width="100%" height="100%">
        <vbox id="background" width="100%" height="100%">
            <vbox styleName="gradient-left" width="100%" height="100%">
                <button text="<< BACK" id="backButton" />
                <spacer height="16" />

                <label styleName="header-big" text="Map Title" id="title" />
                <hbox id="authors" width="1024" continuous="true">
                    <image resource="images/icon_user.png" width="24" height="24" opacity="0.69" />
                    <spacer width="6" />
                </hbox>
                <spacer height="16" />
                
                <hbox width="100%">
                    <image resource="images/icon_clock.png" width="24" height="24" opacity="0.69" />
                    <label text="Map Date" id="date" />
                    <spacer width="24" />
                    <image resource="images/icon_download.png" width="24" height="24" opacity="0.69" />
                    <spacer width="4" />
                    <label text="Download Size" id="sizeLabel" />
                    <spacer width="24" />
                    <image resource="images/icon_trophy.png" width="24" height="24" opacity="0.69" />
                    <spacer width="4" />
                    <label text="Rating" id="ratingLabel" />
                </hbox>
                <hbox id="tags" width="1024" continuous="true">
                    <image resource="images/icon_tags.png" width="24" height="24" opacity="0.69" />
                    <spacer width="6" />
                </hbox>
                <hbox width="100%" height="100%">
                    <vbox width="69%" height="100%">
                        <scrollview width="100%" height="100%" contentWidth="100%" style="border:none;" >
                            <label styleName="description" text="Description" id="description" width="100%" />
                        </scrollview>
                    </vbox>
                    <spacer width="31%" />
                    <vbox width="256px" height="100%">
                        <spacer height="16" />
                        <labeloutlined text="Activity" id="activity" styleName="mediumText" />
                        <hbox width="100%">
                            <button id="buttonQueue" icon="images/icon_queue.png" styleName="biggerButton" text="QUEUE" />
                            <button id="buttonLaunchOptions" icon="images/icon_gear.png" width="62" height="60" tooltip="click to configure\n(I hope you know what you're doing!)" />
                        </hbox>
                        <button id="buttonMark" icon="images/icon_checkbox.png" styleName="bigButton" text="MARK DONE AND HIDE" tooltip="you can always unhide mods later by\nlisting hidden mods in the Search page"/>
                        <hbox id="menuManage" width="100%">
                            <button id="buttonDelete" icon="images/icon_trash.png" tooltip="DELETE FILES (but not dependencies)\n and does not hide nor unqueue it" />
                            <button id="buttonRedownload" icon="images/icon_download.png" tooltip="RE-DOWNLOAD AND RE-INSTALL\n if this mod is broken for some reason,\nthis might repair it? maybe?" />
                            <button id="buttonReinstall" icon="images/icon_pack.png" tooltip="RE-INSTALL TO...\n by default, Quakey puts each mod in a\n new folder but you can override it\n (like put many mods in one big folder)" />
                            <button id="buttonBrowse" icon="images/icon_folder.png" tooltip="BROWSE FILES\n reveals this installed mod folder in Explorer" />
                        </hbox>
                        <button id="buttonQuad" icon="images/icon_talk.png" styleName="bigButton" text="RATE ON QUADDICTED" />
                    </vbox>
                    <spacer width="16" />
                </hbox>
            </vbox>
        </vbox>
    </vbox>
</vbox>