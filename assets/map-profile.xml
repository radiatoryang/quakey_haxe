<vbox styleName="default-background" width="100%" height="100%">
    <vbox id="background-preview" width="100%" height="100%">
        <vbox id="background" width="100%" height="100%" padding="64">
            <button text="<< BACK" id="backButton" />
            <spacer height="16" />

            <label styleName="header-big" text="Map Title" id="title" />
            <hbox id="authors" width="50%" continuous="true">
                <label text=" by " />
            </hbox>
            <spacer height="16" />
            <label text="Map Date" id="date" />
            <spacer height="16" />
            <hbox width="100%" height="100%">
                <vbox width="62%" height="100%">
                    <scrollview width="100%" height="100%" contentWidth="100%" style="border:none;" >
                        <label styleName="description" text="Description" id="description" width="100%" />
                    </scrollview>
                </vbox>
                <spacer width="38%" />
                <vbox width="320px" height="100%">
                    <button id="buttonQueue" styleName="biggerButton" text="QUEUE DOWNLOAD" />
                    <button id="buttonMark" styleName="bigButton" text="MARK AS COMPLETED & HIDE" />
                    <button id="buttonQuad" styleName="bigButton" text="RATE & DISCUSS ON QUADDICTED" />
                </vbox>
            </hbox>
        </vbox>
    </vbox>
</vbox>